<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DataBinding01"
             x:Class="DataBinding01.MainPage">

    <ContentPage.BindingContext>

        <local:Alumno/>
    </ContentPage.BindingContext>
    <ScrollView>

        <VerticalStackLayout Padding="10,10,10,10">

            <Entry x:Name="NombreAAlumno" Text="{Binding Nombre}" Placeholder="Ingresar Nombre"
                   PlaceholderColor="LightBlue" FontSize="Subtitle"/>
            <Label Text="{Binding MostrarNombre}" TextColor="Red" FontAttributes="Bold" FontSize="Large"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
